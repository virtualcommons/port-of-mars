{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@port-of-mars/nuxt/*": [
        "../pom-nuxt/src/*"
      ],
      "@port-of-mars/server/*": [
        "src/*"
      ],
      "@port-of-mars/shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "include": [
      "**/*.ts"
  ]
}
